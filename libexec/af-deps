. /usr/share/abuild/functions.sh

list_has() {
	local needle="$1"
	local i
	shift
	for i in "$@"; do
		[ "$needle" = "$i" ] && return 0
		[ "$needle" = "!$i" ] && return 1
	done
	return 1
}

while getopts s opt; do
case "$opt" in
s) skip_check=1;;
esac
done
shift "$((OPTIND - 1))"

for repo; do
for APKBUILD in "$repo"/*/APKBUILD; do
	[ -e "$APKBUILD" ] || continue

	pkgname=
	options=
	depends_dev=
	depends=
	makedepends_build=
	makedepends_host=
	makedepends=
	checkdepends=
	subpackages=
	provides=
	. "$APKBUILD"
	startdir="${APKBUILD%/APKBUILD}"
	repo="${startdir%/*}"

	# If there isn't even a package name, let's move along
	[ -z "$pkgname" ] && continue

	[ -n "$skip_check" ] && checkdepends=
	list_has "!check" $options && checkdepends=

	for name in $pkgname $subpackages $provides; do
		printf 'o %s %s\n' "${name%%[:=]*}" "$startdir"
	done

	for name in $depends $makedepends $checkdepends; do
		name="${name%%[<>=~]*}"
		case "$name" in
		"") continue;;
		"!"*) continue;;
		esac
		printf 'd %s %s\n' "$startdir" "$name"
	done
done
done
