import os   # environ, isatty
import sys  # argv, exit

from apkfoundry import init_logger, run
from apkfoundry.build import buildrepo

if os.isatty(sys.stdout.fileno()):
    os.environ["USE_COLORS"] = "force"
    color = True
else:
    color = False
init_logger(None, color=color)

sys.exit(buildrepo(sys.argv[1:]))
