import logging # basicConfig
import os      # getuid
import sys     # exit

from apkfoundry import rootid
from apkfoundry.root import listen

logging.basicConfig(
    level=logging.DEBUG,
    format="%(asctime)s %(levelname)s %(message)s",
)

if os.getuid() != rootid().pw_uid:
    _LOGGER.critical("Must be run as af-root")
    sys.exit(1)

listen()
